<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_result">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="150dp"
                android:paddingHorizontal="50dp"
                android:paddingVertical="20dp"
                android:text="@string/robot_string_try_again_text"

                android:textSize="25dp"
                android:textColor="#00796B"
                app:qmui_borderWidth="0dp"
                app:qmui_backgroundColor="#fff"
                />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_game_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="150dp"
                android:paddingHorizontal="50dp"
                android:paddingVertical="20dp"
                android:text="@string/robot_string_game_over_text"

                android:textSize="25dp"
                android:textColor="#00796B"
                app:qmui_borderWidth="0dp"
                app:qmui_backgroundColor="#fff"/>

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/frame_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/game_fragment_text_left"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:textColor="#00796B"
                android:gravity="center"
                android:background="#fff"
                android:textSize="25dp"

                />

            <TextView
                android:id="@+id/game_fragment_text_middle"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:textColor="#00796B"
                android:gravity="center"
                android:background="#fff"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/game_fragment_text_right"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:textColor="#00796B"
                android:gravity="center"
                android:background="#fff"
                android:textSize="25dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_buff_center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:text="n + 4"
                android:textColor="#00796B"

                app:qmui_radius="1dp"
                app:qmui_borderWidth="0dp" />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_buff_left"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@id/game_fragment_button_buff_center"
                android:layout_centerVertical="true"
                android:text="2n + 1"
                android:textColor="#00796B"

                app:qmui_radiusBottomLeft="20dp"
                app:qmui_radiusTopLeft="20dp"
                app:qmui_radiusBottomRight="0dp"
                app:qmui_radiusTopRight="0dp"
                app:qmui_borderWidth="0dp" />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_buff_right"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/game_fragment_button_buff_center"
                android:layout_centerVertical="true"
                android:text="n^2 / 3"
                android:textColor="#00796B"

                app:qmui_radiusBottomLeft="0dp"
                app:qmui_radiusTopLeft="0dp"
                app:qmui_radiusBottomRight="20dp"
                app:qmui_radiusTopRight="20dp"
                app:qmui_borderWidth="0dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_left"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                android:textSize="25dp"
                app:qmui_borderWidth="0dp"
                android:textColor="#00796B"
                app:qmui_backgroundColor="#fff"
                />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_middle"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                android:textSize="25dp"
                app:qmui_borderWidth="0dp"
                android:textColor="#00796B"
                app:qmui_backgroundColor="#fff"
                />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_right"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                android:textSize="25dp"
                app:qmui_borderWidth="0dp"
                android:textColor="#00796B"
                app:qmui_backgroundColor="#fff"
                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_begin">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/game_fragment_button_begin_geme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/robot_string_begin_game_text"
                android:textColor="#00796B"
                android:paddingHorizontal="50dp"
                android:paddingVertical="20dp"
                app:qmui_backgroundColor="#fff"
                app:qmui_borderWidth="0dp"
                android:textSize="25dp"/>

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>