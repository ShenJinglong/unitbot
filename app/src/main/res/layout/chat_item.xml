<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_message_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_robot_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/robot_logo" />
            <!--
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/> -->

        <TextView
            android:id="@+id/item_robot_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_robot_icon"
            android:layout_marginLeft="10dp"
            android:textColor="@color/chat_fragment_words"
            android:gravity="center_vertical"
            android:background="@drawable/chat_bg_cloud"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:textSize="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_message_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/user_logo" />
            <!--
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/> -->

        <TextView
            android:id="@+id/item_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_user_icon"
            android:layout_marginRight="10dp"
            android:textColor="@color/chat_fragment_words"
            android:gravity="center_vertical"
            android:background="@drawable/chat_bg_user"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:textSize="15dp"/>

    </RelativeLayout>

</LinearLayout>