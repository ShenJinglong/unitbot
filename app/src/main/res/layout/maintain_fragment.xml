<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/maintain_fragment_color_sensor_title"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:background="@color/qmui_config_color_white"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        app:qmui_outerNormalColor="?attr/qmui_config_color_background"
        app:qmui_borderColor="?attr/qmui_config_color_separator"
        app:qmui_showBorderOnlyBeforeL="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="颜色传感器"
            android:textSize="25dp"
            android:gravity="center"
            android:background="#00796B"
            android:textColor="#fff"/>

    </com.qmuiteam.qmui.layout.QMUILinearLayout>

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/maintain_fragment_color_info_window"
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:background="@color/qmui_config_color_white"
        android:gravity="center"
        android:layout_below="@id/maintain_fragment_color_sensor_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        app:qmui_outerNormalColor="?attr/qmui_config_color_background"
        app:qmui_borderColor="?attr/qmui_config_color_separator"
        app:qmui_showBorderOnlyBeforeL="true"
        >

        <TextView
            android:id="@+id/maintain_fragment_color_red"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="红色分量： "
            android:textColor="#DFCC3F3F"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/maintain_fragment_color_green"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="绿色分量： "
            android:textColor="#00796B"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/maintain_fragment_color_blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="蓝色分量： "
            android:textColor="#DF3379C9"
            android:textSize="20dp"
            />

    </com.qmuiteam.qmui.layout.QMUILinearLayout>

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/maintain_fragment_distance_sensor_title"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:background="@color/qmui_config_color_white"
        android:gravity="center"
        android:layout_toRightOf="@id/maintain_fragment_color_sensor_title"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        app:qmui_outerNormalColor="?attr/qmui_config_color_background"
        app:qmui_borderColor="?attr/qmui_config_color_separator"
        app:qmui_showBorderOnlyBeforeL="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="距离传感器"
            android:textSize="25dp"
            android:gravity="center"
            android:background="#00796B"
            android:textColor="#fff"/>

    </com.qmuiteam.qmui.layout.QMUILinearLayout>


    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/maintain_fragment_distance_info_window"
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:background="@color/qmui_config_color_white"
        android:gravity="center"
        android:layout_below="@id/maintain_fragment_distance_sensor_title"
        android:layout_toRightOf="@id/maintain_fragment_color_info_window"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        app:qmui_outerNormalColor="?attr/qmui_config_color_background"
        app:qmui_borderColor="?attr/qmui_config_color_separator"
        app:qmui_showBorderOnlyBeforeL="true"
        >

        <TextView
            android:id="@+id/maintain_fragment_distance_value"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="距离： "
            android:textColor="#00796B"
            android:textSize="20dp"
            />

    </com.qmuiteam.qmui.layout.QMUILinearLayout>
    

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/maintain_fragment_baud"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/maintain_fragment_duoji"
        android:layout_alignParentRight="true"
        android:text="串口波特率"
        android:textColor="#00796B"
        app:qmui_backgroundColor="#fff"
        app:qmui_borderWidth="0dp"
        android:paddingVertical="20dp"
        app:qmui_radiusTopRight="0dp"
        app:qmui_radiusBottomRight="0dp"
        app:qmui_radiusTopLeft="20dp"
        app:qmui_radiusBottomLeft="20dp"
        android:textSize="15dp"
        android:layout_marginBottom="15dp"/>
    

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/maintain_fragment_duoji"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/maintain_fragment_serial_linear_layout"
        android:layout_alignParentRight="true"
        android:text="调试舵机"
        android:textColor="#00796B"
        app:qmui_backgroundColor="#fff"
        app:qmui_borderWidth="0dp"
        android:paddingVertical="20dp"
        app:qmui_radiusTopRight="0dp"
        app:qmui_radiusBottomRight="0dp"
        app:qmui_radiusTopLeft="20dp"
        app:qmui_radiusBottomLeft="20dp"
        android:textSize="15dp"
        android:layout_marginBottom="15dp"/>


    <LinearLayout
        android:id="@+id/maintain_fragment_serial_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/maintain_fragment_serial_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#00796B"
            android:layout_gravity="bottom"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/maintain_fragment_serial_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/robot_string_send_button_text"
            android:textColor="#00796B"
            app:qmui_backgroundColor="#fff"
            app:qmui_borderWidth="0dp"
            android:paddingVertical="20dp"
            app:qmui_radiusTopRight="0dp"
            app:qmui_radiusBottomRight="0dp"
            app:qmui_radiusTopLeft="20dp"
            app:qmui_radiusBottomLeft="20dp"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

</RelativeLayout>